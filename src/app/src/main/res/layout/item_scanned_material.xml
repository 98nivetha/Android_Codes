<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:padding="16dp"
    card_view:cardCornerRadius="12dp"
    android:clickable="true"
    android:focusable="true"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/dividerHorizontal"
        android:dividerPadding="8dp"
        android:orientation="vertical"
        android:showDividers="middle">

        <ImageView
            android:id="@+id/imgValidationIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:contentDescription="Validation icon"
            android:padding="4dp"
            android:focusableInTouchMode="false" />


        <!-- Row 1: Code + Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtMaterialCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Material Code"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMaterialName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Material Name"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Row 2: Quantity + CCI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Qty"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCci"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CCI"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Row 3: Rack Group + Rack Code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtRackGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rack Group"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRackCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rack Code"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Row 4: RFID -->
        <TextView
            android:id="@+id/txtRfid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="RFID"
            android:paddingStart="10dp"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
