<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:id="@+id/ouer_layer_rlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/row1_llay"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_scan_id_txt"
                        android:text="@string/scan_id"
                        android:layout_centerHorizontal="true"
                        style="@style/TitleListItemEmpVerifyTextStyle"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/lbl_scan_id_txt"
                        android:id="@+id/val_scan_id_txt"
                        android:text="-"
                        android:layout_centerHorizontal="true"
                        style="@style/ValueListItemEmpVerifyTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_status"
                        android:layout_alignParentEnd="true"
                        android:layout_width="30dp"
                        android:src="@drawable/ic_wrong"
                        android:layout_height="30dp"/>

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/row2_llay"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/row1_llay"
                android:layout_width="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_asset_name_txt"
                        android:text="@string/asset_name"
                        android:layout_centerHorizontal="true"
                        style="@style/TitleListItemEmpVerifyTextStyle"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/lbl_asset_name_txt"
                        android:id="@+id/val_asset_name_txt"
                        android:text="-"
                        android:layout_centerHorizontal="true"
                        style="@style/ValueListItemEmpVerifyTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_asset_code_txt"
                        android:text="@string/asset_code"
                        android:layout_centerHorizontal="true"
                        style="@style/TitleListItemEmpVerifyTextStyle"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/lbl_asset_code_txt"
                        android:id="@+id/val_asset_code_txt"
                        android:text="-"
                        android:layout_centerHorizontal="true"
                        style="@style/ValueListItemEmpVerifyTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row3_llay"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/row2_llay"
                android:layout_width="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_placeof_asset_txt"
                        android:text="@string/placeof_asset"
                        android:layout_centerHorizontal="true"
                        style="@style/TitleListItemEmpVerifyTextStyle"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/lbl_placeof_asset_txt"
                        android:id="@+id/val_placeof_asset_txt"
                        android:text="-"
                        android:layout_centerHorizontal="true"
                        style="@style/ValueListItemEmpVerifyTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_placeof_asset_name_txt"
                        android:text="@string/placeof_asset_name"
                        android:layout_centerHorizontal="true"
                        style="@style/TitleListItemEmpVerifyTextStyle"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/lbl_placeof_asset_name_txt"
                        android:id="@+id/val_placeof_asset_name_txt"
                        android:text="-"
                        android:layout_centerHorizontal="true"
                        style="@style/ValueListItemEmpVerifyTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:visibility="gone"
                android:layout_below="@+id/row3_llay"
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/ewrp_remarks"
                    style="@style/EditControlWrapperStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/elbl_remarks"
                        style="@style/TextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ectl_remarks"
                            style="@style/SingleLineEditTextStyle"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:gravity="top"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/remarks"
                             />

                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>