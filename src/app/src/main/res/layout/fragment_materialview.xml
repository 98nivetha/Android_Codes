<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="materialview"
            type="com.zebra.demo.viewmodel.MaterialViewViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Page Title -->
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/materialview"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_title"
            android:layout_marginTop="16dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <!-- Material Code -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/lbl_material_code_txt"
                            style="@style/TitleViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/material_code" />

                        <TextView
                            android:id="@+id/val_material_code_txt"
                            style="@style/ValueViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-" />
                    </LinearLayout>

                    <!-- Material Name -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/lbl_material_name_txt"
                            style="@style/TitleViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/material_name" />

                        <TextView
                            android:id="@+id/val_material_name_txt"
                            style="@style/ValueViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 2: Rack Code + Inward Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <!-- Rack Code -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/lbl_rackcode_txt"
                            style="@style/TitleViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/RackCode" />

                        <TextView
                            android:id="@+id/val_lbl_rackcode_txt"
                            style="@style/ValueViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-" />
                    </LinearLayout>

                    <!-- Inward Date -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/lbl_inwardDtate_txt"
                            style="@style/TitleViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/inward_Date" />

                        <TextView
                            android:id="@+id/val_inwardDtate_txt"
                            style="@style/ValueViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 3: Packing Std + Quantity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <!-- Packing Std -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/lbl_packingStd_txt"
                            style="@style/TitleViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/packingstd" />

                        <TextView
                            android:id="@+id/val_packingStd_txt"
                            style="@style/ValueViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-" />
                    </LinearLayout>

                    <!-- Quantity -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/lbl_quantity_txt"
                            style="@style/TitleViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/quantity" />

                        <TextView
                            android:id="@+id/val_quantity_txt"
                            style="@style/ValueViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Row 4: Status (alone) -->
                <!-- Row 4: RFID + Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <!-- RFID -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/lbl_rfid_txt"
                            style="@style/TitleViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/RFID" />

                        <TextView
                            android:id="@+id/val_rfid_txt"
                            style="@style/ValueViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-" />
                    </LinearLayout>

                    <!-- Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/lbl_status_txt"
                            style="@style/TitleViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/status" />

                        <TextView
                            android:id="@+id/val_status_txt"
                            style="@style/ValueViewItemTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Progress Bar -->
                <RelativeLayout
                    android:id="@+id/rlt_atvty_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/pbr_atvty_progress"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:indeterminateTint="@color/app_color" />
                </RelativeLayout>

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:text="Scan RFID" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>
