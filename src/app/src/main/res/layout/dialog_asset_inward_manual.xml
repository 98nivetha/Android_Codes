<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/close_img"
                android:src="@drawable/ic_close"
                android:layout_width="50dp"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_height="50dp"/>



            <LinearLayout
                android:id="@+id/row1_llay"
                android:layout_below="@+id/close_img"
                android:layout_width="match_parent"
                android:baselineAligned="false"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_last_gate_pass_no_txt"
                        android:text="@string/last_gate_pass_no"
                        android:layout_centerHorizontal="true"
                        style="@style/TitleViewItemTextStyle"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/lbl_last_gate_pass_no_txt"
                        android:id="@+id/val_last_gate_pass_no_txt"
                        android:text="-"
                        android:layout_centerHorizontal="true"
                        style="@style/ValueListItemTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_out_date_txt"
                        android:text="@string/out_date"
                        android:layout_centerHorizontal="true"
                        style="@style/TitleViewItemTextStyle"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/lbl_out_date_txt"
                        android:id="@+id/val_out_date_txt"
                        android:text="-"
                        android:layout_centerHorizontal="true"
                        style="@style/ValueListItemTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/rview"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/row1_llay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/row2_llay"
                android:layout_below="@+id/row1_llay"
                android:layout_width="match_parent"
                android:baselineAligned="false"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_sno_txt"
                        android:text="@string/asset_serial_no"
                        android:layout_centerHorizontal="true"
                        style="@style/TitleViewItemTextStyle"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/lbl_sno_txt"
                        android:id="@+id/val_sno_txt"
                        android:text="-"
                        android:layout_centerHorizontal="true"
                        style="@style/ValueListItemTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_asset_code_txt"
                        android:text="@string/asset_code"
                        android:layout_centerHorizontal="true"
                        style="@style/TitleViewItemTextStyle"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/lbl_asset_code_txt"
                        android:id="@+id/val_asset_code_txt"
                        android:text="-"
                        android:layout_centerHorizontal="true"
                        style="@style/ValueListItemTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:id="@+id/row3_llay"
                android:layout_below="@+id/row2_llay"
                android:layout_width="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/lbl_asset_name_txt"
                        android:text="@string/asset_name"
                        android:layout_centerHorizontal="true"
                        style="@style/TitleViewItemTextStyle"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/lbl_asset_name_txt"
                        android:id="@+id/val_asset_name_txt"
                        android:text="-"
                        android:layout_centerHorizontal="true"
                        style="@style/ValueListItemTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>


        <RelativeLayout
            android:visibility="gone"
            android:layout_below="@+id/row3_llay"
            android:layout_width="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_not_ok"
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:minWidth="100dp"
                android:layout_height="60dp"
                android:text="@string/not_ok"
                android:layout_toStartOf="@+id/btn_ok"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                style="?attr/materialButtonOutlinedStyle"
                android:theme="@style/SaveButtonStyle"
                app:cornerRadius="30dp"
                app:rippleColor="@color/rippleColor"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:minWidth="100dp"
                android:layout_height="60dp"
                android:text="@string/ok"
                android:textSize="14sp"
                android:theme="@style/SaveButtonStyle"
                app:cornerRadius="30dp"
                app:rippleColor="@color/rippleColor"/>

        </RelativeLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>